        </div><br />

        <!-- chat four -->
        <hr style="height:0pt; visibility:hidden; margin:0;" />
        <div class="chat-inner opacity0 absolute rsWebkit3d" id="blink4">
          <p class="chat chat-left">
            <span class="blink-left" id="typing-indicator-one"></span>
            <span class="blink-left" id="typing-indicator-two"></span>
            <span class="blink-left" id="typing-indicator-three"></span>
          </p>
        </div>
        <div class="chat-inner">
